@model ServicePlanner.Models.ViewModels.MethodVM

@{
    var title = "Create Method";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post" asp-action="Upsert">

    <div class="row px-2 mx-2 backgroundWhite border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @if(Model.Method.Id != 0)
        {
            <input type="hidden" asp-for="Method.Id" />
            title = "Edit Method";
        }

        <div class="col-12">
            <h2 class="text-primary">@title</h2>
            <br />
        </div>
        <div class="col-8">
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Method.MethodName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Method.MethodName" class="form-control" />
                    <span asp-validation-for="Method.MethodName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Method.NormName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="Method.NormName" class="form-control" />
                    <span asp-validation-for="Method.NormName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-4">
                    <label asp-for="Method.CategoryId"></label>
                </div>
                <div class="col-8">
                    @Html.DropDownListFor(m => m.Method.CategoryId, Model.CategoryList,
                                                 "- Please select a Category-", new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group row">
                <div class="col-8 offset-4">
                    @if (Model.Method.Id != 0)
                    {
                        //Edit button and back to list
        <partial name="_EditAndBackToListButton" model="Model.Method.Id" /> }
                    else
                    {
                        //Create button and back to list
        <partial name="_CreateAndBackToListButton" />}
                </div>
            </div>
        </div>

    </div> 

</form>
